<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_blank_message_generator"
        tools:context=".LoremIpsumGeneratorActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" tools:ignore="UseCompoundDrawables">

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:textSize="24sp"
                  android:textStyle="bold"
                  android:textColor="#323232"
                  android:fontFamily="@font/poppins_medium"
                  android:text="Lorem Ipsum" tools:ignore="HardcodedText"/>

        <ImageView
                android:id="@+id/icMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_more_menu"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground" tools:ignore="ContentDescription"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textStyle="bold"
              android:textColor="#323232"
              android:layout_marginTop="-10dp"
              android:fontFamily="@font/poppins_medium"
              android:text="Generator" tools:ignore="HardcodedText"/>


    <ScrollView android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
              android:fillViewport="true" tools:ignore="UselessParent">

      <TextView
              android:id="@+id/tvLoremIpsum"
              android:layout_width="match_parent"
              android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content"/>

  </ScrollView>

</LinearLayout>